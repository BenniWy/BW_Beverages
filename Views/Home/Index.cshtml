@model HomeViewModel

@await Html.PartialAsync("Carousel")

<h2>Prefered drinks of the week </h2>
<h4>Clients preferences - just for you!</h4>

@if (Model.PreferredDrinks != null)
{
    <div class="row">
        @foreach (Drink drink in Model.PreferredDrinks)
        {
            <partial name="DrinksSummary" model="drink" />
        }
    </div>
}
else
{
    <p>No preferred drinks available.</p>
}